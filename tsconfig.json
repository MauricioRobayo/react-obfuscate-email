{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "rootDir": "src",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "target": "es6",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017", "DOM"],
    "types": ["react"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx"]
}
